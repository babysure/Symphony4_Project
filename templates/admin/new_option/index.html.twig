{% extends 'base.html.twig' %}

{% block title 'Gérer les options' %}

{% block body %}

  <div class = 'container mt-4'>

    <h1> Gérer les options </h1>

    {% for message in app.flashes('success') %}
    <div class= 'alert alert-success' >

      {{ message }}

    </div>

    {% endfor %}

    <table class = 'table table-striped'>
      <thead>
        <tr>
          <th> Nom</th>
          <th> Actions </th>
        </tr>
      </thead>

      <tbody>

        {% for option in new_options %}
        <tr>

          <td> {{ option.name }}  </td>

          <td>
              <a href = '{{ path('newoption_edit' , {id : option.id } ) }}' class = 'btn btn-secondary' > Editer</a>
              <form method='post' action='{{ path('newoption_delete' , {id : option.id}) }}' style = 'display : inline-block'
              onsubmit="return confirm('Voulez vous vraiment suprimer {{ option.name }}')" >

                <input name='_method' value="DELETE" type='hidden'>
                <input name='_token' type='hidden' value = "{{ csrf_token('delete' ~ option.id ) }}">
                <button class='btn btn-danger' > Suprimer </button>

              </form>
          </td>


        </tr>

        {% endfor  %}

      </tbody>
    </table>

    <div class="container">

      <a href = '{{ path('newoption_new') }}' class = 'btn btn-primary' > Créer</a>

    </div>







  </div>
{% endblock %}
